<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyProgressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:color">@android:color/white</item>
        <item name="android:indeterminateTint">@color/orange</item>
    </style>

    <style name="MyBorderLessButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">@dimen/text_normal</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="ButtonStyle1" parent="MyBorderLessButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle2" parent="MyBorderLessButton">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
    </style>
</resources>
